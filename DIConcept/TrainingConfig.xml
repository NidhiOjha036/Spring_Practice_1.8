    <bean id="trainer" abstract="true">
        <constructor-arg index="1">
            <set>
                <value>Core Java</value>
                <value>Advance Java</value>
            </set>
        </constructor-arg>
    </bean>

    <bean id="sanjay" class="com.mikadosolutions.training.spring.di.JavaTrainer" parent="trainer">
        <constructor-arg value="Sanjay Makhija"/>
        <constructor-arg index="1">
            <set merge="true">
                <value>Struts2</value>
                <value>Spring</value>
                <value>EJB</value>
            </set>
        </constructor-arg>
    </bean>


    <bean id="praful" class="com.mikadosolutions.training.spring.di.JavaTrainer" parent="trainer">
        <constructor-arg value="Praful Vernekar"/>
        <constructor-arg index="1">
            <set merge="true">
                <value>Hibernate</value>
                <value>EJB</value>
            </set>
        </constructor-arg>
    </bean>

